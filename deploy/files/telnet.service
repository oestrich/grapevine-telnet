[Unit]
Description=Runner for Grapevine
After=network.target

[Service]
Type=forking
User=deploy
Group=deploy
WorkingDirectory=/home/deploy/telnet
Environment=LANG=en_US.UTF-8
Exec=/home/deploy/telnet/bin/telnet foreground
SyslogIdentifier=telnet
RemainAfterExit=no
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
